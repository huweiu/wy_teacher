.avatar{
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center; 
  margin-bottom: 10rpx;
  background-color: skyblue;
}

.avatar image{
  width: 200rpx; 
  height: 200rpx;
  border-radius: 50%;
}

.section{
   margin:20rpx;
   padding:20rpx; 
}

.tecRegMsg{
  padding-top: 10rpx;
  background-color: #c9c9c9;
}

.tecRegMsg .username,
.tecRegMsg .sex,
.tecRegMsg .idenify,
.tecRegMsg .birth {
  display: flex;
  margin-bottom: 10rpx;
}

.tecRegMsg .username input,
.tecRegMsg .idenify input,
.tecRegMsg .birth picker{
  border: 1px solid #999;
}

.btn{
  width: 100%;  
  background-color: pink;
}

.btn button{
  width: 55%;
  display: flex;
  justify-content: center;
  align-items: center; 
  margin-top: 50px;
}